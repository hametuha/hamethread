{
  "name": "hametuha/hamethread",
  "description": "Forum plugin by hametuha.",
  "type": "wordpress-plugin",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "lint": [
      "phpcs --standard=phpcs.ruleset.xml $(find ./app -name '*.php')",
      "phpcs --standard=phpcs.ruleset.xml functions.php"
    ],
    "fix": [
      "phpcbf --standard=phpcs.ruleset.xml $(find ./app -name '*.php')",
      "phpcbf --standard=phpcs.ruleset.xml functions.php"
    ],
    "test": "phpunit"
  },
  "authors": [
    {
      "name": "fumikito",
      "email": "guy@hametuha.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=7.4.0",
    "hametuha/pattern": "^1.0.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^8|^9|^11",
    "wp-coding-standards/wpcs": "~3.0"
  },
  "autoload": {
    "psr-0": {
      "Hametuha\\Thread": "app"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
